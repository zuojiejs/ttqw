/* pages/index/index.wxss */
.container {
    position: relative;
    padding: 30rpx 20rpx;
    padding-bottom: 160rpx;
    text-align: left;
}

.title {
    width: 100%;
    padding-bottom: 40rpx;
    font-size: 40rpx;
    font-weight: 900;
}

.block {
    width: 100%;
    margin-bottom: 30rpx;
    font-size: 32rpx;
}

.block image {
    display: block;
    margin: 0 auto;
    margin-top: 0;
}

.block .text {
    display: block;
    width: 100%;
    margin-top: 10rpx;
    font-size: 28rpx;
    text-align: center;
}

.tips {
    width: 100%;
    margin-bottom: 20rpx;
}
.tips text {
    font-size: 40rpx;
    font-weight: 900;
    color: red;
    background: yellow;
}

.foot {
    display: flex;
    position: fixed;
    left: 0;
    bottom: 0;
    height: 130rpx;
    width: 750rpx;
    background: #FF7F00;
}

.btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1;
    width: 0;
    padding-bottom: 20rpx;
}

button {
  display:unset;
  margin-left:unset;
  margin-right:unset;
  padding-left:unset;
  padding-right:unset;
  box-sizing:unset;
  font-size:unset;
  text-align:unset;
  text-decoration:unset;
  line-height:unset;
  border-radius:unset;
  -webkit-tap-highlight-color:unset;
  overflow:unset;
  color:unset;
  background-color:unset;
}

button::after {
  border: 0;
}

button::before {
  border: 0;
}

.btn image {
    height: 40rpx;
    width: 40rpx;
    margin-top: 10rpx;
}

.btn text {
    color: white;
    font-size: 28rpx;
    margin-top: 10rpx;
}
.btn .bold {
    font-weight: 900;
}

.shareIcon {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.shareIcon image {
  width: 60rpx;
  transform:rotate(90deg);
  -ms-transform:rotate(90deg); 	/* IE 9 */
  -moz-transform:rotate(90deg); 	/* Firefox */
  -webkit-transform:rotate(90deg); /* Safari å’Œ Chrome */
  -o-transform:rotate(90deg); 
}